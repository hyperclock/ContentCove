<!-- app/Resources/views/base.html.twig -->
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html"; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}{% trans %}blog_title{% endtrans %}{% endblock %}</title>
        
        {% block stylesheets %}
            <!-- Google Fonts CSS - CDN -->
            <link href='http://fonts.googleapis.com/css?family=Irish+Grover' rel='stylesheet' type='text/css'>
            <link href='http://fonts.googleapis.com/css?family=La+Belle+Aurore' rel='stylesheet' type='text/css'>

            <!-- Bootstrap CSS - CDN -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

            <!-- Customs CSS -->
            <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">
        {% endblock %}

            <link rel="shortcut icon" href="{{ asset('assets/images/favicon.png') }}" />
    </head>
    <body>
 
        <section id="wrapper">
            <header id="header">
                <div class="top">
                    {% block navigation %}
                        <nav>
                        <!-- Lang Switcher Dropdown -->

                        <!-- END - Lang Switch Dropdown -->

                            <ul class="navigation">
                                <li><a href="#">{{ 'nav_home'|trans }}</a></li>
                                <li><a href="#">{{ 'nav_about'|trans }}</a></li>
                                <li><a href="#">{{ 'nav_contact'|trans }}</a></li>
                            </ul>
                        </nav>
                    {% endblock %}
                </div>
 
                <hgroup>
                    <h2>{% block blog_title %}<img src="{{ asset('assets/images/logo.png') }}" width="220px" /><!--<a href="#">{{ 'blog_title'|trans }}</a></img>{% endblock %}--></h2>
                    <h3>{% block blog_tagline %}<a href="#">{{ 'blog_tagline'|trans }}</a>{% endblock %}</h3>
                </hgroup>
            </header>
 
            <section class="main-col">
                {% block body %}{% endblock %}
            </section>
            <aside class="sidebar">
                {% block sidebar %}{% endblock %}
            </aside>
 
            <div id="footer">
                {% block footer %}
               {{ 'copyright_title'|trans }} &copy; 2024-{{ "now" | date("Y") }} <a href="mailto://{{ 'footer_mail_name'|trans }}@{{ 'footer_mail_domain'|trans }}">{{ 'copyright_name'|trans }}</a>
                    <br><br>
<a href="#">{{ 'legal_terms'|trans }}</a>&nbsp;&nbsp;|&nbsp;&nbsp;
<a href="#">{{ 'legal_privacy'|trans }}</a>&nbsp;&nbsp;|&nbsp;&nbsp;
<a href="#">{{ 'legal_disclaimer'|trans }}</a>&nbsp;&nbsp;|&nbsp;&nbsp;
<a href="#">{{ 'legal_trademarks'|trans }}</a>&nbsp;&nbsp;|&nbsp;&nbsp;
<a href="#">{{ 'legal_imprint'|trans }}</a>
 
